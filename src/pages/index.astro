---
import Card from "../componest/Card.astro"

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Card Profile</title>
	</head>
	<body>
		<Card 
			name="Henrietta Gregory"
			city="Berkeley, CA"
			text="Ethnographer of computation and computational ethnographer; research staff at the Berkeley Institute for Data Science"
		/>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

	:root {
		--body-bg-color: #212020;
		--poppins: "Poppins", sans-serif;
	}

	*,
	*::after,
	*::before{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	body{
		background: var(--body-bg-color);
		height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		font-family: var(--poppins);
	}
</style>
